{% extends "base.twig" %}

{% block title %}Search results{% endblock %}


{% block content %}


    <div class = "search-results">
        <h1>Search Results</h1>
        {% for video in result %}
            <a href="watch.php?v={{ video.id }}">
                <div class="result">
                    <div class="search-thumb">
                        <img src="{{video.thumbnailPath}}" alt="Heyo">
                    </div>
                    <div class="main-result">
                        <div class="main-search">
                           {#<a href="watch.php?v={{ video.id }}">#}
                            <div class="videoTitle"> {{ video.title }}</div>
                            {#</a>#}
                            <div class="searchTopic"> Topic: {{ video.topic }} </div>
                            <div class="searchSubject"> Subject: {{ video.subject }} </div>
                            <div class="searchDescription"> Description: {{ video.description }}</div>
                        </div>
                    </div>
                </div>
            </a>
        {% endfor %}
    </div>

    <div class = "search-results">
        <h1>Search Results playlists</h1>
        {% for playlist in playlistResult %}
            <a href="playlistSelect.php?v={{ playlist.id }}">
                <div class="result">
                    <div class="search-thumb">
                        <img src="{{video.thumbnailPath}}" alt="Heyo">
                    </div>
                    <div class="main-result">
                        <div class="main-search">
                            <div class="videoTitle"> {{ playlist.title }}</div>
                            <div class="searchTopic"> Topic: {{ playlist.topic }} </div>
                            <div class="searchSubject"> Subject: {{ playlist.subject }} </div>
                            <div class="searchDescription"> Description: {{ playlist.description }}</div>
                        </div>
                    </div>
                </div>
            </a>
        {% endfor %}
    </div>

    {{ error }}


{% endblock %}
